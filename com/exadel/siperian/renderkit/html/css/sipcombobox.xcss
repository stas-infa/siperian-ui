<?xml version="1.0" encoding="UTF-8"?>
<f:template xmlns:f='http:/jsf.exadel.com/template'
   xmlns:u='http:/jsf.exadel.com/template/util'
   xmlns="http://www.w3.org/1999/xhtml" >

<f:verbatim>
<![CDATA[

input.sip-combobox-button-pressed {
}

input.sip-combobox-button-pressed-background {
}

input.sip-combobox-input {
	width : 240px; 
	position : absolute; 
	top : 0px; 
	left : 0; 
	padding-left :3px; 
	margin : 0px; 
	border-style: solid;
	border-width: 1px; 
	border-left-color: #000000; 
	border-top-color: #000000;
	background-position:left top;
	background-repeat:repeat-x; 
}

input.sip-combobox-input-disabled {
	width : 240px; 
	position : absolute; 
	top : 0px; 
	left : 0; 
	padding-left :3px; 
	margin : 0px;
	border-style: solid;
	border-width: 1px; 
	border-left-color: #000000; 
	border-top-color: #000000;
	background-position:left top;
	background-repeat:repeat-x;  
}

input.sip-combobox-input-inactive { 
	width : 240px; 
	position : absolute; 
	top : 0px; 
	left : 0; 
	padding-left :3px; 
	margin : 0px;
	border-style: solid;
	border-width: 1px; 
	border-left-color: #000000; 
	border-top-color: #000000;
	background-position:left top;
	background-repeat:repeat-x; 
} 

input.sip-combobox-font-disabled {
	color: #AAAAAA;
}

.sip-combobox-list-position { 
	position : absolute; 
	top:1px; 
	left:0px;
}

.sip-combobox-list-decoration { 
	border : 1px solid #c0c0c0;
	padding : 0px; 
	background : #FFFFFF;
}

.sip-combobox-list-scroll {
	overflow : auto; 
	overflow-x : hidden; 
}
.sip-combobox-ie7-list{
		border: 1px solid #000000 !important;
		background-color:#FFFFFF !important;
	    border-collapse:collapse !important;
	    overflow : auto !important; 
	    overflow-x : hidden !important;
	    min-width:100px !important;
}
.sip-combobox-list-cord { 
	position : relative; 
	background-color:#FFFFFF;
}

.sip-combobox-item {
	padding : 2px; 
	white-space : nowrap;
	display: block;
}

.sip-combobox-item-selected {
	padding : 1px; 
	border : 1px solid #4a75b5;
	background-color: #4a75b5;
	cursor:pointer;
	width:100%;
}

.sip-combobox-strut { 
	width :  240px;
	position : relative; 
	visibility : hidden;  
	margin : 0px; 
	padding-left : 3px;
	border : 1px solid #c0c0c0;
}

.sip-combobox-shell {
	position : relative;
}

input.sip-combobox-button { 
	position : absolute; 
	top : 0px; 
	right : 0; 
	width : 17px; 
	padding-left : 0px; 
	padding-right : 0px; 
	margin : 0px; 
	border-style: solid;
	border-right-color: #000000; 
	border-bottom-color: #000000;
	border-width: 1px;
}

input.sip-combobox-button-disabled {
	position : absolute; 
	top : 0px; 
	right : 0; 
	width : 17px; 
	padding-left : 0px; 
	padding-right : 0px; 
	margin : 0px; 
	border-style: solid;
	border-right-color: #000000; 
	border-bottom-color: #000000;
	border-width:1px;

}

input.sip-combobox-button-inactive {
	position : absolute; 
	top : 0px; 
	right : 0; 
	width : 17px; 
	padding-left : 0px; 
	padding-right : 0px; 
	margin : 0px; 
	border-style: solid;
	border-right-color: #000000; 
	border-bottom-color: #000000;
	border-width:1px;

}

input.sip-combobox-button-background { 
	background-color: #4a75b5;
	background-repeat: repeat-x;
	background-position:  top;
	cursor : pointer;
} 

input.sip-combobox-button-background-disabled { 
	background-color: #4a75b5;
	background-repeat: repeat-x;
	background-position:  top; 
	cursor : pointer;
} 

input.sip-combobox-button-background-inactive { 
	background-color: #4a75b5;
	background-repeat: repeat-x;
	background-position:  top;
} 


input.sip-combobox-button-pressed-background { 
	background-color: #4a75b5;
	background-repeat: repeat-x;
	background-position:  bottom;
} 

input.sip-combobox-button-icon { 
	background : center  no-repeat; cursor : pointer;
}

input.sip-combobox-button-icon-disabled { 
	background : center  no-repeat; cursor : pointer;
}

input.sip-combobox-button-icon-inactive { 
	background : center  no-repeat; cursor : pointer;
}

input.sip-combobox-button-hovered {
	border-width : 1px;
	border-style : solid;
}

.sip-combobox-shadow{ 
	position : absolute;
}

.sip-combobox-shadow-tl{
	background-position: top left;
	background-repeat: repeat-x; 

}
.sip-combobox-shadow-tr{
	background-repeat: repeat-x; 
	background-position: top right;
}
.sip-combobox-shadow-bl{
	background-repeat: repeat-x;
	background-position: bottom left;
}
.sip-combobox-shadow-br{
	background-repeat: repeat-x;
	background-position: bottom right;
}
.sip-combobox-list-table{
	border-collapse : collapse;
	border : 1px;
}
]]>

</f:verbatim>

	<u:selector name=".sip-combobox-shadow-tl, .sip-combobox-shadow-tr, .sip-combobox-shadow-bl, .sip-combobox-shadow-br">
		<u:style name="background-image">
			<f:resource f:key="/com/exadel/siperian/renderkit/html/images/bg_shadow.png"/>
		</u:style>
	</u:selector>
	
	<u:selector name="input.sip-combobox-button-background, input.sip-combobox-button-background-disabled, input.sip-combobox-button-background-inactive">
		<u:style name="background-image">
			<f:resource f:key="org.richfaces.renderkit.html.images.SpinnerButtonGradient" />
		</u:style>
		<u:style name="background-color" skin="tabBackgroundColor"/>
	</u:selector>
	
	<u:selector name="input.sip-combobox-button-pressed-background">
		<u:style name="background-image">
			<f:resource f:key="org.richfaces.renderkit.html.images.ComboBoxButtonPressGradient" />
		</u:style>
		<u:style name="background-color" skin="tabBackgroundColor"/>
	</u:selector>
	
	<u:selector name="input.sip-combobox-button-icon, input.sip-combobox-button-icon-inactive">
		<u:style name="background-image">
			<f:resource f:key="org.richfaces.renderkit.html.images.ComboBoxArrowImage" />
		</u:style>
	</u:selector>
	
	<u:selector name="input.sip-combobox-button-icon-disabled">
		<u:style name="background-image">
			<f:resource f:key="org.richfaces.renderkit.html.images.ComboBoxArrowImageDisable" />
		</u:style>
	</u:selector>
	
	<u:selector name="input.sip-combobox-button, input.sip-combobox-button-inactive, input.sip-combobox-button-disabled">
		<u:style name="border-top-color" skin="panelBorderColor"/>
		<u:style name="border-left-color" skin="panelBorderColor"/>
	</u:selector>
	
	<u:selector name=".sip-combobox-font, input.sip-combobox-font">
		<u:style name="font-size" skin="generalSizeFont"/>
		<u:style name="font-family" skin="generalFamilyFont"/>
		<u:style name="color" skin="generalTextColor"/>
	</u:selector>
	
	<u:selector name="input.sip-combobox-font-disabled, .sip-combobox-font-disabled">
		<u:style name="font-family" skin="headerFamilyFont"/>
		<u:style name="font-size" skin="headerSizeFont"/>
	</u:selector>
	
	<u:selector name="input.sip-combobox-font-inactive, .sip-combobox-font-inactive, .sip-combobox-item">
		<u:style name="font-size" skin="generalSizeFont"/>
		<u:style name="font-family" skin="generalFamilyFont"/>
		<u:style name="color" skin="generalTextColor"/>
	</u:selector>
	
		
	<u:selector name=".sip-combobox-input, .sip-combobox-input-disabled, .sip-combobox-input-inactive">
		<u:style name="background-color" skin="controlBackgroundColor"/>
		<u:style name="border-bottom-color" skin="panelBorderColor"/>
		<u:style name="border-right-color" skin="panelBorderColor"/> 
	</u:selector>
		
	
	<u:selector name=".sip-combobox-item-selected">
		<u:style name="background-color" skin="headerBackgroundColor" />
		<u:style name="border-color" skin="headerBackgroundColor" />
		<u:style name="color" skin="headerTextColor" />
	</u:selector>
	
	<u:selector name=".sip-combobox-list-decoration">
		<u:style name="border-color" skin="panelBorderColor"/>
		<u:style name="background" skin="tableBackgroundColor"/>
	</u:selector>
	
	<u:selector name="input.sip-combobox-button-hovered">
		<u:style name="border-color" skin="selectControlColor"/>
	</u:selector>
</f:template>
